<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- SplashActivityTheme -->
    <style name="SplashActivityTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- BaseTheme -->
    <style name="BaseTheme" parent="android:Theme.Holo.Light">
        <!-- Do something -->
        <item name="actionBarOverlayTopOffset">?android:actionBarSize</item>
        <item name="actionBarInsetStart">?android:actionBarSize</item>
        <item name="spinnerBarInsetStart">?android:actionBarSize</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        <item name="popupItemBackground">?android:selectableItemBackground</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_up</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowIconStyle</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:actionDropDownStyle">@style/ActionDropDownStyle</item>

        <item name="android:editTextBackground">@drawable/edittext</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>

        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="android:listPopupWindowStyle">@style/PopupMenuStyle</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListViewStyle</item>
        <item name="android:textAppearanceLargePopupMenu">@style/TextAppearanceLargePopupMenu</item>
    </style>

    <!-- OverflowIconStyle -->
    <style name="OverflowIconStyle" parent="android:Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

    <!-- ActionBarStyle -->
    <style name="ActionBarStyle" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="android:actionBarDivider">@null</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
    </style>

    <!-- ActionDropDownStyle -->
    <style name="ActionDropDownStyle" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <!-- ActionBarTitleTextStyle -->
    <style name="TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextStyle" parent="android:Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/edittext</item>
    </style>

    <!-- PopupMenuStyle -->
    <style name="PopupMenuStyle" parent="android:Widget.Holo.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel</item>
        <item name="android:dropDownSelector">?popupItemBackground</item>
    </style>

    <!-- DropDownListViewStyle -->
    <style name="DropDownListViewStyle" parent="android:Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">?popupItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <!-- TextAppearanceLargePopupMenu -->
    <style name="TextAppearanceLargePopupMenu" parent="android:TextAppearance.Holo.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/text</item>
    </style>

    <!-- MainActivityTheme -->
    <style name="MainActivityTheme" parent="BaseTheme" />

</resources>
