<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashActivityTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="MainActivityTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:actionBarStyle">@style/TweetinActionBarStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowIconStyle</item>
    </style>
    <style name="OverflowIconStyle" parent="android:Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>
    <style name="TweetinActionBarStyle" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/teal_default</item>
        <item name="android:actionBarDivider">@null</item>
        <item name="android:titleTextStyle">@style/TweetinActionBarTitleTextStyle</item>
    </style>
    <style name="TweetinActionBarTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
