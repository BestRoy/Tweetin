<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:fitsSystemWindows="true"
                android:clipToPadding="false">

    <RelativeLayout android:id="@+id/post_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:padding="15dp"
                    android:background="@color/white">

        <ToggleButton android:id="@+id/post_check_in"
                      android:layout_width="24dp"
                      android:layout_height="24dp"
                      android:background="@drawable/post_check_in_button_selector"
                      android:text=""
                      android:textOff=""
                      android:textOn="">
        </ToggleButton>

        <ToggleButton android:id="@+id/post_choose_image"
                      android:layout_width="24dp"
                      android:layout_height="24dp"
                      android:layout_marginLeft="15dp"
                      android:layout_toRightOf="@id/post_check_in"
                      android:background="@drawable/post_post_picture_button_selector"
                      android:text=""
                      android:textOff=""
                      android:textOn="">
        </ToggleButton>

        <TextView android:id="@+id/post_count_words"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:background="@color/white"
                  android:textSize="20sp"
                  android:singleLine="true"
                  android:ellipsize="end">
        </TextView>

    </RelativeLayout>

    <ScrollView android:id="@+id/post_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/post_option">

        <LinearLayout android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">

            <ImageView android:id="@+id/post_picture"
                       android:contentDescription="@string/post_picture"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="15dp"
                       android:layout_marginLeft="15dp"
                       android:layout_marginRight="15dp"
                       android:adjustViewBounds="true"
                       android:visibility="gone">
            </ImageView>

            <EditText android:id="@+id/post_text"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_marginTop="15dp"
                      android:layout_marginLeft="15dp"
                      android:layout_marginRight="15dp"
                      android:gravity="top"
                      android:background="@color/white"
                      android:hint="@string/post_hint"
                      android:textColorHint="@color/hint"
                      android:textColor="@color/text">
            </EditText>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>