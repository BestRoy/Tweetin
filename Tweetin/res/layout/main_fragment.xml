<?xml version="1.0" encoding="utf-8"?>

<uk.co.senab.actionbarpulltorefresh.library.PullToRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res/io.github.mthli.Tweetin"
        android:id="@+id/ptr_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.twotoasters.jazzylistview.JazzyListView
            android:id="@+id/main_fragment_timeline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            app:effect="slide_in"
            app:only_animate_new_items="true"
            app:only_animate_fling="false"
            app:max_velocity="0">
    </com.twotoasters.jazzylistview.JazzyListView>

    <com.melnykov.fab.FloatingActionButton
            android:id="@+id/button_floating_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:src="@drawable/ic_action_write"
            app:fab_colorNormal="@color/transparent"
            app:fab_colorPressed="@color/teal_white"
            app:fab_shadow="true"
            app:fab_type="mini">
    </com.melnykov.fab.FloatingActionButton>

</uk.co.senab.actionbarpulltorefresh.library.PullToRefreshLayout>