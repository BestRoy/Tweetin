<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res/io.github.mthli.Tweetin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/tumblr_dark_blue"
                android:descendantFocusability="blocksDescendants">

    <RelativeLayout android:id="@+id/detail_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/tumblr_dark_blue"
                    android:layout_alignParentBottom="true"
                    android:padding="15dp">

        <Button android:id="@+id/detail_quote"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/detail_quote_button_selector">
        </Button>

        <Button android:id="@+id/detail_retweet"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/detail_retweet_button_selector"
                android:layout_toRightOf="@id/detail_quote"
                android:layout_marginLeft="15dp">
        </Button>

        <Button android:id="@+id/detail_reply"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/detail_reply_button_selector"
                android:layout_alignParentRight="true">
        </Button>

    </RelativeLayout>

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_above="@id/detail_option"
                android:scrollbars="none">

        <LinearLayout android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">

            <LinearLayout android:id="@+id/detail_reply_to_status"
                          android:orientation="vertical"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="7dp"
                          android:layout_marginRight="7dp"
                          android:layout_marginBottom="2.5dp"
                          android:background="@drawable/driibo_shot_default"
                          android:visibility="gone">

                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/detail_reply_to_status_avatar"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentLeft="true"
                            android:layout_margin="12dp"
                            app:border_width="0dp">
                    </de.hdodenhof.circleimageview.CircleImageView>

                    <LinearLayout android:orientation="vertical"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_toRightOf="@id/detail_reply_to_status_avatar"
                                  android:layout_marginTop="14dp"
                                  android:layout_marginRight="12dp">

                        <RelativeLayout android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                            <TextView android:id="@+id/detail_reply_to_status_created_at"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_alignParentRight="true"
                                      android:paddingLeft="12dp"
                                      android:textSize="12sp"
                                      android:textColor="@color/hint"
                                      android:singleLine="true"
                                      android:ellipsize="end">
                            </TextView>

                            <TextView android:id="@+id/detail_reply_to_status_name"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_alignParentLeft="true"
                                      android:textSize="14sp"
                                      android:textColor="@color/text"
                                      android:singleLine="true"
                                      android:ellipsize="end">
                            </TextView>

                        </RelativeLayout>

                        <RelativeLayout android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                            <TextView android:id="@+id/detail_reply_to_status_check_in"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_alignParentRight="true"
                                      android:paddingLeft="12dp"
                                      android:drawableLeft="@drawable/ic_check_in"
                                      android:drawablePadding="2dp"
                                      android:textSize="12sp"
                                      android:textColor="@color/hint"
                                      android:singleLine="true"
                                      android:ellipsize="end"
                                      android:visibility="gone">
                            </TextView>

                            <TextView android:id="@+id/detail_reply_to_status_screen_name"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_alignParentLeft="true"
                                      android:textSize="12sp"
                                      android:textColor="@color/hint"
                                      android:singleLine="true"
                                      android:ellipsize="end">
                            </TextView>

                            <TextView android:id="@+id/detail_reply_to_status_protect"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_toRightOf="@id/detail_reply_to_status_screen_name"
                                      android:paddingLeft="5dp"
                                      android:drawableLeft="@drawable/ic_tweet_protect"
                                      android:drawablePadding="2dp"
                                      android:textSize="12sp"
                                      android:textColor="@color/hint"
                                      android:singleLine="true"
                                      android:ellipsize="end"
                                      android:visibility="gone">
                            </TextView>

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

                <ImageView android:id="@+id/detail_reply_to_status_picture"
                           android:contentDescription="@string/detail_picture_cd"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:adjustViewBounds="true"
                           android:layout_marginTop="12dp"
                           android:background="@color/white"
                           android:visibility="gone">
                </ImageView>

                <TextView android:id="@+id/detail_reply_to_status_text"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="8dp"
                          android:layout_marginBottom="12dp"
                          android:layout_marginLeft="12dp"
                          android:layout_marginRight="12dp"
                          android:textColor="@color/text"
                          android:textSize="14sp"
                          android:autoLink="web|email">
                </TextView>

                <TextView android:id="@+id/detail_reply_to_status_retweeted_by_name"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="12dp"
                          android:layout_marginRight="12dp"
                          android:layout_marginBottom="12dp"
                          android:drawableLeft="@drawable/ic_retweeted_by"
                          android:drawablePadding="2dp"
                          android:textSize="12sp"
                          android:textColor="@color/hint"
                          android:singleLine="true"
                          android:ellipsize="end"
                          android:visibility="gone">
                </TextView>

            </LinearLayout>

            <LinearLayout android:id="@+id/detail_this_status"
                          android:orientation="vertical"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="7dp"
                          android:layout_marginRight="7dp"
                          android:background="@drawable/driibo_shot_default">

                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/detail_this_status_avatar"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentLeft="true"
                            android:layout_margin="12dp"
                            app:border_width="0dp">
                    </de.hdodenhof.circleimageview.CircleImageView>

                    <LinearLayout android:orientation="vertical"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_toRightOf="@id/detail_this_status_avatar"
                                  android:layout_marginTop="14dp"
                                  android:layout_marginRight="12dp">

                        <RelativeLayout android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                            <TextView android:id="@+id/detail_this_status_created_at"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_alignParentRight="true"
                                      android:paddingLeft="12dp"
                                      android:textSize="12sp"
                                      android:textColor="@color/hint"
                                      android:singleLine="true"
                                      android:ellipsize="end">
                            </TextView>

                            <TextView android:id="@+id/detail_this_status_name"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_alignParentLeft="true"
                                      android:textSize="14sp"
                                      android:textColor="@color/text"
                                      android:singleLine="true"
                                      android:ellipsize="end">
                            </TextView>

                        </RelativeLayout>

                        <RelativeLayout android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                            <TextView android:id="@+id/detail_this_status_check_in"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_alignParentRight="true"
                                      android:paddingLeft="12dp"
                                      android:drawableLeft="@drawable/ic_check_in"
                                      android:drawablePadding="2dp"
                                      android:textSize="12sp"
                                      android:textColor="@color/hint"
                                      android:singleLine="true"
                                      android:ellipsize="end"
                                      android:visibility="gone">
                            </TextView>

                            <TextView android:id="@+id/detail_this_status_screen_name"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_alignParentLeft="true"
                                      android:textSize="12sp"
                                      android:textColor="@color/hint"
                                      android:singleLine="true"
                                      android:ellipsize="end">
                            </TextView>

                            <TextView android:id="@+id/detail_this_status_protect"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_toRightOf="@id/detail_this_status_screen_name"
                                      android:paddingLeft="5dp"
                                      android:drawableLeft="@drawable/ic_tweet_protect"
                                      android:drawablePadding="2dp"
                                      android:textSize="12sp"
                                      android:textColor="@color/hint"
                                      android:singleLine="true"
                                      android:ellipsize="end"
                                      android:visibility="gone">
                            </TextView>

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

                <ImageView android:id="@+id/detail_this_status_picture"
                           android:contentDescription="@string/detail_picture_cd"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:adjustViewBounds="true"
                           android:layout_marginTop="12dp"
                           android:background="@color/white"
                           android:visibility="gone">
                </ImageView>

                <TextView android:id="@+id/detail_this_status_text"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="8dp"
                          android:layout_marginBottom="12dp"
                          android:layout_marginLeft="12dp"
                          android:layout_marginRight="12dp"
                          android:textSize="14sp"
                          android:textColor="@color/text"
                          android:autoLink="web|email">
                </TextView>

                <TextView android:id="@+id/detail_this_status_retweeted_by_name"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="12dp"
                          android:layout_marginRight="12dp"
                          android:layout_marginBottom="12dp"
                          android:drawableLeft="@drawable/ic_retweeted_by"
                          android:drawablePadding="2dp"
                          android:textSize="12sp"
                          android:textColor="@color/hint"
                          android:singleLine="true"
                          android:ellipsize="end"
                          android:visibility="gone">
                </TextView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>